<UserControl x:Class="EldorST18.wpf.UserEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EldorST18.wpf"
             mc:Ignorable="d" 
   d:DesignHeight="155" d:DesignWidth="180" MaxWidth="155" MaxHeight="180">
    <Grid Margin="10">
        <Border Effect="{DynamicResource z-depth1}" Background="#FFE69A16" ></Border>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="120" x:Name="txt_uName" TextAlignment="Center" Margin="0,5" />
            <TextBox HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="120" x:Name="txt_uPass" TextAlignment="Center"/>
            <Button  Style="{DynamicResource GlassButton}"  Content="Sign in" HorizontalAlignment="Left"   VerticalAlignment="Top" Width="120" Click="btn_signIn" Height="28" Margin="0,5"/>
        </StackPanel>

    </Grid>
</UserControl>
